<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/nextBtn"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="@dimen/vertical_padding_medium"
                android:src="@drawable/ic_login_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_padding_medium"
                android:text="@string/txt_sign_up_title"
                android:textAppearance="@style/TextAppearance.SignUp.Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconView" />

            <TextView
                android:id="@+id/RoleTypeTxt"
                style="@style/Widget.Form.Input.Role.Type"
                android:text="@string/txt_student_parent_sign_up_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTxt" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/studentInfoConstraint"
                style="@style/Widget.Signup.Constraint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RoleTypeTxt">

                <TextView
                    android:id="@+id/studentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginTop="@dimen/vertical_padding_medium"
                    android:text="@string/txt_student_details"
                    android:textAppearance="@style/TextAppearance.OnBoarding.Text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.riteshakya.ui.components.TextInput
                    android:id="@+id/firstNameTxt"
                    style="@style/Widget.Form.Input"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:hint="@string/txt_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/studentTxt" />

                <com.riteshakya.ui.components.TextInput
                    android:id="@+id/lastNameTxt"
                    style="@style/Widget.Form.Input"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:hint="@string/txt_last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/firstNameTxt" />

                <com.riteshakya.ui.components.SelectInput
                    android:id="@+id/schoolSelect"
                    style="@style/Widget.Form.Input"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:hint="@string/txt_select_school"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lastNameTxt" />

                <com.riteshakya.ui.components.TabSwitchView
                    android:id="@+id/genderSwitch"
                    style="@style/Widget.TabAsSwitch"
                    android:layout_marginStart="@dimen/horizontal_padding_large"
                    android:layout_marginTop="@dimen/vertical_padding"
                    android:layout_marginEnd="@dimen/horizontal_padding_large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schoolSelect"
                    app:tabBackground="@drawable/background_gender_switch">

                    <!-- Extra hidden tab selected by default -->
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female" />

                </com.riteshakya.ui.components.TabSwitchView>

                <com.riteshakya.ui.components.CustomSpinner
                    android:id="@+id/classSelect"
                    style="@style/SpinnerTheme"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginTop="@dimen/horizontal_padding"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:layout_marginBottom="@dimen/horizontal_padding"
                    android:background="@drawable/background_spinner_border"
                    android:entries="@array/classList"
                    android:theme="@style/AppTheme.InputLayout.Text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sectionSelect"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderSwitch"
                    app:selectedTextAppearance="@style/TextAppearance.Spinner.Medium" />

                <com.riteshakya.ui.components.CustomSpinner
                    android:id="@+id/sectionSelect"
                    style="@style/SpinnerTheme"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginTop="@dimen/horizontal_padding"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:layout_marginBottom="@dimen/horizontal_padding"
                    android:background="@drawable/background_spinner_border"
                    android:entries="@array/sectionList"
                    android:theme="@style/AppTheme.InputLayout.Text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/classSelect"
                    app:layout_constraintTop_toBottomOf="@id/genderSwitch"
                    app:selectedTextAppearance="@style/TextAppearance.Spinner.Medium" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parentInfoConstraint"
                style="@style/Widget.Signup.Constraint"
                android:layout_marginBottom="@dimen/vertical_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/studentInfoConstraint">

                <TextView
                    android:id="@+id/parentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginTop="@dimen/vertical_padding_medium"
                    android:text="@string/txt_parent_details"
                    android:textAppearance="@style/TextAppearance.OnBoarding.Text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.riteshakya.ui.components.TextInput
                    android:id="@+id/parentFirstNameTxt"
                    style="@style/Widget.Form.Input"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:hint="@string/txt_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/parentTxt" />

                <com.riteshakya.ui.components.TextInput
                    android:id="@+id/parentLastNameTxt"
                    style="@style/Widget.Form.Input"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:hint="@string/txt_last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/parentFirstNameTxt" />

                <com.riteshakya.ui.components.TextInput
                    android:id="@+id/passwordTxt"
                    style="@style/Widget.Form.Input"
                    android:layout_marginStart="@dimen/horizontal_padding_medium"
                    android:layout_marginEnd="@dimen/horizontal_padding_medium"
                    android:layout_marginBottom="@dimen/vertical_padding"
                    android:hint="@string/txt_set_password"
                    android:imeOptions="actionNext"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/parentLastNameTxt"
                    app:password="true" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/nextBtn"
        style="@style/Widget.Button"
        android:enabled="false"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>