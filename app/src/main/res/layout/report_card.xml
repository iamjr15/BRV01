<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="24dp"
    android:padding="8dp"
    android:background="@drawable/background_report_card_border">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="63dp"
        android:src="@color/colorWhite"
        android:layout_height="63dp"
        android:layout_alignTop="@id/complaintBy"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        tools:src="@tools:sample/backgrounds/scenic"
        />

    <TextView
        android:id="@+id/complaintBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="12dp"
        android:text="complaint by"
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/colorBlack"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/complaintBy"
        android:layout_marginLeft="90dp"
        android:text="andrew d."
        android:textAllCaps="true"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/colorBlack"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/report_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="90dp"
        android:text="Bullying"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/report_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="82dp"
        android:layout_marginRight="17dp"
        android:text="24 feb. 2019"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="10sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="102dp"
        android:background="@color/colorBlack"></View>


    <TextView
        android:id="@+id/class_section"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="113dp"
        android:background="@drawable/class_section_button_shape"
        android:text="11 - c"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:textAllCaps="true" />


    <com.riteshakya.ui.components.RoundedButton
        android:id="@+id/resolve_type"
        android:layout_width="145dp"
        android:clickable="true"
        android:layout_height="37dp"
        app:backgroundColor="#3146ae"
        android:layout_alignParentRight="true"
        android:layout_marginTop="113dp"
        android:layout_marginRight="25dp"
        android:text="resolve"
        />


</RelativeLayout>