<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.riteshakya.student.feature.report.teacher_school.ComplaintReportHomeActivity">



    <View
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:background="@drawable/background_report_header"
        />

    <com.riteshakya.ui.components.ReportHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@color/colorWhite"
        android:text="complaint \nreports"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="46dp"
        tools:visibility="visible" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_main"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:tabSelectedTextColor="#FFF"
        android:layout_marginTop="170dp"
        app:tabIndicatorColor="@color/colorWhite"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorGravity="bottom"
        android:background="#ffdc3c5c"
        android:textSize="12sp"
        app:tabTextColor="#FA9AAC"
        app:tabMode="fixed"/>


<androidx.viewpager.widget.ViewPager
    android:id="@+id/viewpager_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tabs_main"/>


</RelativeLayout>
